{
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "name": "orca-payment-page",
  "jsx": {
    "version": 4,
    "mode": "classic"
  },
  "bsc-flags": ["-bs-super-errors", "-open RescriptCore"],
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "shared-code/sdk-utils",
      "subdirs" : true
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "ppx-flags": [],
  "package-specs": {
    "module": "esmodule",
    "in-source": true
  },
  "bs-dependencies": [
    "@rescript/react",
    "@rescript/core",
    "@glennsl/rescript-fetch"
  ]
}
